            update(a.p2, b.p2)
    }



    update(a,b) {
        if cond(a)                 
            if cond(a.p1)                
                update(a.p1.p1, b.p1.p1)
            else
                update(a.p1.p2, b.p1.p2)
        else
            if cond(a.p1)                
                update(a.p2.p1, b.p2.p1)
            else
                update(a.p2.p2, b.p2.p2)
    }

